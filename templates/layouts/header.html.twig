<header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="{{ path }}">PACOMIUT</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            {% set route_name = app.request.attributes.get('_route')|split('_')[0] %}
            <ul class="navbar-nav mr-auto">
                {# <li class="nav-item {{ route_name == 'home' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path }}">Accueil</a>
                </li> #}
                <li class="nav-item dropdown {{ route_name == 'comptage' ? 'active' : '' }}">
                    <a class="nav-link dropdown-toggle {{ route_name == 'comptage' ? 'active' : '' }}" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        Comptage JCO
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        {% for departement in departements %}
                            <a class="dropdown-item" href="{{ path('comptage', {'departement': departement.id }) }}">Dept. {{ departement.shortname }}</a>
                        {% endfor %}
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle {{ route_name == 'form' ? 'active' : '' }}" id="navbarDropdown" role="button" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        Enquête JCO
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        {% for departement in departements %}
                            <a class="dropdown-item" href="{{ path('satisfaction', {'departement': departement.id }) }}">Dept. {{ departement.shortname }}</a>
                        {% endfor %}
                    </div>
                </li>
                {# <li class="nav-item dropdown  {{ route_name == 'tutorat' ? 'active' : '' }}">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        Tutorat
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        {% for departement in departements %}
                            <a class="dropdown-item" href="{{ path('tutorat') }}">Dept. {{ departement.shortname }}</a>
                        {% endfor %}
                    </div>
                </li> #}
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item {{ route_name == 'aide' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('aide') }}">Aide</a>
                </li>
                {% if is_granted('ROLE_PROF') %}
                    <li class="nav-item {{ route_name == 'admin' ? 'active' : '' }}">
                        <a class="nav-link" href="{{ path('admin') }}">Administration</a>
                    </li>
                {% endif %}
                <li class="nav-item {{ route_name == 'contact' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('contact') }}">Informations</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Bonjour, {{ app.user.firstname }}
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> Se déconnecter</a>
                    </div>
                </li>
            </ul>
         </div>
    </nav>
</header>