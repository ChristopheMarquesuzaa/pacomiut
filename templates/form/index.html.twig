{% extends 'layouts/app.html.twig' %}

{% block title %}Formulaire !{% endblock %}

{% block body %}
<main role="main" class="container">
    <div class="card mt-5">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8 col-lg-8 col-xs-12">
                    <h2 class="class-title">JCO 2019 (samedi 9 février)</h2>
                    <h3 class="class-title">Formulaire d'enquête/satisfaction</h3>
                </div>
                <div class="col-md-4 col-lg-4 col-xs-12">
                <br>
                    <h4 class="class-title">Département {{dpt}}</h4>
                </div>
            </div>
            <hr>
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-6 col-xs-12">
                        <a href="{{ path('form_show', {'dpt': dpt}) }}" class="btn">Répondre au questionnaire</a>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xs-12">
                        <a href="{{ path('form_data', {'dpt': dpt}) }}" class="btn">Afficher les résultats</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}